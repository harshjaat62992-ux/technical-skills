//given an array a you have to find the second largest element in the array or report that no such element exist

public class second_largest {
    public static void main(String[] args) {

//        array input
        int[] array = {12,23,21,25,34};
        int len = array.length;
        int largest = array[0];
        int second_largest = array[0];
        if (len>1) {
            for (int i = 1; i < array.length; i++) {
                if (array[i] > largest) {
                    second_largest = largest;
                    largest = array[i];
                } else if ((array[i] > second_largest) && (array[i] != largest)) {
                    second_largest = array[i];
                }
            }
            System.out.println(second_largest);
        } else{
            System.out.println("no second largest");;
        }
    }
}
